{
  "lock": false,
  "importMap": "import_map.json",
  "exclude": ["npm", "LICENSE.md"],
  "fmt": {
    "singleQuote": true,
    "semiColons": false
  },
  "tasks": {
    "node": "deno run -A scripts/build_npm.ts",
    "test": "deno test -A --parallel",
    "ok": "deno fmt --check && deno lint && deno check src/**/*.ts && deno task test"
  }
}
